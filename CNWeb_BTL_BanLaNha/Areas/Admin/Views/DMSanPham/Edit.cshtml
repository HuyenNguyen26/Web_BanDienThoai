@model CNWeb_BTL_BanLaNha.Models.LOAISANPHAM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin:30px;">Chỉnh sửa </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin:30px;">Loại sản phẩm</h4>
        <hr style="margin:30px;"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin:30px;">
            @Html.Label("Mã Loại", htmlAttributes: new { @class = "control-label col-md-2",@style="color:black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin:30px;">
            @Html.Label("Tên Loại", htmlAttributes: new { @class = "control-label col-md-2",@style="color:black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />|
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}

