@model PagedList.IPagedList<CNWeb_BTL_BanLaNha.Models.LOAISANPHAM>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin:30px;">Quản Lý Loại Sản Phẩm</h2>

<p style="margin:30px;">
    <button onclick="location.href='@Url.Action("Create", "DMSanPham")';return false;">THÊM MỚI</button>
</p>
<table class="table table-bordered" style="margin:30px;">
    <tr>
        <th>
            @Html.Label("Mã Loại")
        </th>
        <th>
            @Html.Label("Tên Loại")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("Edit", "DMSanPham", new { MaLoai = item.MaLoai, TenLoai = item.TenLoai })';return false;">SỬA</button>
                
                <button onclick="location.href='@Url.Action("Delete", "DMSanPham", new { MaLoai = item.MaLoai, TenLoai = item.TenLoai })';return false;">XÓA</button>
            </td>
        </tr>
    }

</table>
<div style="margin-left:50px;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

