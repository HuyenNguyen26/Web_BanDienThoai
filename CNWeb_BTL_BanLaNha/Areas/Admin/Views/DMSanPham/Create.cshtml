@model CNWeb_BTL_BanLaNha.Models.LOAISANPHAM
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm danh mục sản phẩm</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Loại sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaLoai, htmlAttributes: new { @class = "control-label col-md-2",@style="color:black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:15px;">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "control-label col-md-2",@style="color:black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" , @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:15px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />|
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}


