@model CNWeb_BTL_BanLaNha.Models.SANPHAM
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới sản phẩm</h2>
@using (Html.BeginForm("Create", "QLSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sản phẩm </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Mã Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.MaSP, null, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mã Loại Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaLoai, null, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:15px;">
                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:15px;">
            @Html.Label("Màu Sắc", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:15px;">
                @Html.EditorFor(model => model.MauSac, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MauSac, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:30px;">
            @Html.Label("Bộ Nhớ", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:15px;">
                @Html.EditorFor(model => model.BoNho, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.BoNho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:45px;">
            @Html.Label("Đơn Giá", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:15px;">
                @Html.EditorFor(model => model.GiaSP, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:60px;">
            @Html.Label("Ảnh", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;" })
            <div class="col-md-10" style="top:15px;">
                @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                @*<input type="file" name="hinhanh" id="hinhanh" value="url" />*@
            </div>
        </div>

        <div class="form-group"style="top:75px;">
            @Html.Label("Mô tả", htmlAttributes: new { @class = "control-label col-md-2",@style="color:black;" })
            <div class="col-md-10" style="top:15px">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:75px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />|
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}



