
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section css
    {
    <link rel="stylesheet" href="~/Content/style/css/manageOrder.css" />
}


@using CNWeb_BTL_BanLaNha.Models;

@model IEnumerable<HOADON>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="nav">

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="menu"><a href="">Quản Lý đơn hàng</a></li>
                <li class="menu"><a href="">Quản lý sản phẩm</a></li>
                <li class="menu"><a href="">Quản lý tin tức</a></li>
            </ul>

            <div class="Admin">
                <div class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                        Admin: Trần Văn Thịnh
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/Products/HoaTinhYeu">
                                Đổi Mật Khẩu.
                            </a>
                        </li>
                        <li>
                            <a href="/Products/HoaTinhYeu">
                                Thay đổi ảnh đại diện
                            </a>
                        </li>
                        <li>
                            <a href="/Products/HoaTinhYeu">
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="tacVu">
            <input name="delete" type="button" value="Xóa">
            <input name="print" type="button" value="in">
            <input name="modify" type="button" value="sửa">
        </div>


        @foreach (HOADON hd in Model)
        {
            <div class="conten_poder">
                <div class="content_donhang">
                    <table class="tbl_hoadon">
                        <thead>
                            <tr>
                                <th class="product-name">Mã hóa đơn:@hd.MaHD<br></th>
                                <th class="product-total">Ngày HĐ :@hd.NgayLapHD<br></th>
                                <th class="product-total">Trạng thái:@hd.TinhTrang<br></th>
                            </tr>
                        </thead>

                        <tbody>


                            <tr class="cart_item">
                                <td class="product-name">
                                    iphoneXsmax.
                                    <strong class="product-quantity">× 1</strong>
                                </td>
                                <td class="product-total">
                                    <span class="slnhandongia">
                                        14000,000.00
                                        <span class="woocommerce-Price-currencySymbol">₫</span>
                                    </span>
                                </td>
                            </tr>
                            <tr class="cart_item">
                                <td class="product-name">
                                    iphone11.					 <strong class="product-quantity">× 1</strong>
                                </td>
                                <td class="product-total">
                                    <span class="woocommerce-Price-amount amount">2400,000.00<span class="woocommerce-Price-currencySymbol">₫</span></span>
                                </td>
                            </tr>

                        </tbody>

                        <tfoot>

                            <tr class="order-total">
                                <th>Tổng</th>
                                <td><strong><span class="woocommerce-Price-amount amount">1,100,000.00<span class="woocommerce-Price-currencySymbol">₫</span></span></strong> </td>

                            </tr>

                        </tfoot>

                    </table>


                </div>

            </div>
        }


        <form class="navbar-form navbar-right" action="/HomeAdmin/TimKiem">
            <div class="form-group">
                <input type="text" class="form-control" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
            </div>
            <button type="submit" class="btn btn-default">
                <img src="/images/icon-tim-kiem.png" width="18" height="18">
            </button>
        </form>
    </div>
</body>
</html>
